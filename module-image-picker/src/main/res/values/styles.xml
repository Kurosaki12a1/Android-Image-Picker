<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Kuro.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kuro.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kuro.body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kuro.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>

    <style name="Kuro.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>